#!/bin/bash
# Builds the ni image, first by assembling the self-modifying parts (./boot),
# and then by telling it to add modules.

cd $(dirname $0)

./boot

module() {
  echo -en "ni --internal/lib $1                   \r"
  ./ni --internal/lib $1
}

export NI_NO_HOME=yes           # IMPORTANT
module core/gen
module core/json
module core/deps

module core/conf
module core/stream
module core/meta
module core/monitor
module core/uri
module core/fn
module core/closure
module core/destructure

module core/checkpoint
module core/net
module core/buffer

module core/col
module core/row
module core/cell

module core/pl
module core/rb
module core/lisp
module core/sql
module core/python

module core/binary
module core/matrix
module core/gnuplot

module core/http
module core/caterwaul
module core/jsplot

module core/docker
module core/hadoop
module core/pyspark

module doc
unset NI_NO_HOME

if [[ `./ni //ni` != "$(< ni)" ]]; then
  echo "ni is unstable under replication" >&2
  exit 1
fi

echo
wc -c ni
